Page{
  background-color: #f4f4f4;
}

.bg{
  position: relative;
  height: 450rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.bg-image{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:-1;
}

.UCenter-bg text {
  opacity: 0.8;
}

.usericon{
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
}

.manage_text{
  font-size: 30rpx;
  color: #ffffff;
  margin-top: 10rpx;
  border: 2rpx solid #9b9b9b;
  border-radius: 40rpx;
  text-align: center;
}

.center{
  width: 90%;
  height: 240rpx;
  margin: 0 auto;
  background-color: #ffffff;
  border-radius: 20rpx;
  text-align: center;
  margin-top: -120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  box-shadow: 0rpx 8rpx 8rpx 3rpx rgb(221,220,220);
}

.order_text{
  font-size: 44rpx;
  color: gray;
  margin-top: 20rpx;
  text-align: left;
  height: 60rpx;
  margin-left: 30rpx;
}

.cut{
  height: 140rpx;
  width: 2rpx;
  margin-top: 50rpx;
  border: 1rpx solid #c9c9c9;
}

.square{
  width: 100%;
  height: 220rpx;
  margin: 10rpx;
}

.square .text{
  margin-top: 8rpx;
  color: #474747;
  font-size: 30rpx;
}

.squ_img image{
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

.block{
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  width: 94%;
  margin-top: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 8rpx 8rpx rgb(221,220,220);
  background-color: #ffffff;
}

.block_title{
  padding-left: 30rpx;
  height: 80rpx; 
  line-height: 80rpx;
  font-size: 32rpx;
}

.item{
  display: flex;
  margin: 0 auto;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  width: 100%;
  border-top: 1rpx solid #c9c9c9;
}

.icon{
  width: 100rpx;
  text-align: center;
  margin-top: 16rpx;
}

.icon image{
  width: 57rpx;
  height: 57rpx;
}

.itemname{
  color: gray;
  width: 40%;
  font-size: 32rpx;
}

.arrow{
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #c9c9c9;
  border-right: 2px solid #c9c9c9;
  position: absolute;
  right: 55rpx;
  transform: rotate(45deg);
}

.btn{
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 80rpx;
  left: 0;
  z-index: 2;
}

.feedback{
  display: flex;
  margin: 0 auto;
  height: 80rpx;
  width: 100%;
  position: relative;
}

.arrow-f{
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #c9c9c9;
  border-right: 2px solid #c9c9c9;
  position: absolute;
  right: 32rpx;
  transform: rotate(45deg);
}
