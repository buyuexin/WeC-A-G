.title{
  padding: 3% 10%;
  text-align: center;
  font-weight: 500;
  font-size: 24px;
}
.solid-bottom{
  border-bottom: 1rpx solid rgb(212, 212, 212);
}
.self-info{
  display: flex;
  flex-direction: row;
  /* border: 1px solid red; */
  align-items: center;
  padding: 12rpx;
}
.img{
  /* border: 1px solid green; */
  text-align: center;
  height: 78rpx;
}
.img image{
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
}
.info-text{
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  /* border: 1px solid lightblue; */
}
.name{
  font-size: 30rpx;
  font-weight: 600;
}
.time{
  font-size: 24rpx;
  color: rgb(150, 150, 150);
  padding-top: 4rpx;
}
.main-content{
  padding: 16rpx;
  padding-left: 26rpx;
  font-size: 28rpx;
  color: black;
}
.text-26{
  font-size: 26rpx;
}
.reply-item{
  padding: 10rpx;
	height: auto
}
.reply-content{
  font-size: 26rpx;
  background-color: rgb(230, 230, 230);
  color: black;
  border-radius: 4rpx;
  padding: 10rpx;
  padding-left: 26rpx;
}
.view-more{
  padding-top: 5rpx;
  color: var(--blue);
}