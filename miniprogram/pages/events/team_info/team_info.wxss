.title{
  padding: 5% 10%;
  padding-bottom: 3%;
  text-align: center;
  font-weight: 500;
  font-size: 24px;
}

.item{
  background-color: var(--white);
	padding: 1rpx 10rpx;
  display: flex;
  flex-direction: row;
	align-items: center;
	min-height: 100rpx;
}

.item-left{
  text-align: center;
  margin-right: 20rpx;
}

.solid-bottom{
  border-bottom: 1rpx solid #eee;
}

.detail{
  background-color: var(--white);
  display: block;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  min-height: 100rpx;
  word-wrap: break-word;
  word-break: normal;
} 