.title{
  padding: 5% 10%;
  padding-bottom: 3%;
  text-align: center;
  font-weight: 500;
  font-size: 24px;
}
.top-block{
  height: 500rpx;
  display: flex;
  position: relative;

}
.shade{
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 1024;
  background-color: rgba(0, 0, 0, 0.425);
}
.cover-content{
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 100%;
  padding-left: 32rpx;
  padding-bottom: 32rpx;
}
.team-name{
  min-height: 78rpx;
  font-size: 44rpx;
}
.tag-view{
  min-height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}
.tag{
  height: 42rpx;
  /* width: fit-content; */
  border-radius: 10rpx;
  background-color: rgb(143, 155,250);
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  padding: 0 15rpx;
  display: flex;
  align-items: center;
}
.tag-con{
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}
.cover{
  height: 500rpx;
  width: 100%;
}
.item{
  background-color: var(--white);
	padding: 1rpx 10rpx;
  display: flex;
  flex-direction: row;
	align-items: center;
  min-height: 100rpx;
  margin-left: 2%;
}

.item-left{
  text-align: center;
  margin-right: 20rpx;
}
.item-left>view{
  font-size: 24rpx;
	vertical-align: middle;
	position: relative;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	padding: 0rpx 16rpx;
  height: 48rpx;
  width: 120rpx;
	font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
  border: 1px solid var(--blue);
  border-radius: 6rpx;
  color: var(--blue);
}

.solid-bottom{
  border-bottom: 1rpx solid #eee;
}

.detail{
  background-color: var(--white);
  display: block;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  min-height: 100rpx;
  word-wrap: break-word;
  word-break: normal;
} 