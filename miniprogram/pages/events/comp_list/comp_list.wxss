.item{
  display: block;
	background-color: var(--white);
	overflow: hidden;
	border-radius: 10rpx;
	margin: 10rpx;
}

.pic{
  /* background-color: #ccc; */
  width: 100%;
  display: flex;
  justify-content: center;
}

.pic image{
  width: 95%;
  max-height: 220rpx;
  display: block;
  border-radius: 10px;
}

.cont{
  display: flex;
}

.cont>.img{
  display: flex;
  margin: 0 20rpx; 
  text-align: center;
  justify-content: center;
}

.cont>.img>image{
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
}

.desc{
  flex: 1;
	display: flex;
	flex-direction: column;
  justify-content: space-between;
}

.text-title{
  /* display: flex; */
  min-height: 70rpx;
  font-size: 28rpx;
  color: var(--black);
}

.text-title0{
  /* display: flex; */
  min-height: 48rpx;
  font-size: 28rpx;
  color: var(--black);
}

.text-content{
  font-size: 24rpx;
	color: var(--black);
  overflow: hidden;
}


.tag{
  font-size: 20rpx;
	vertical-align: middle;
	position: relative;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	padding: 0rpx 5rpx;
	height:35rpx;
	font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
  width: min-content;
}