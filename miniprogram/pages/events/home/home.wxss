
.border{
  border: 1px solid black;
}

.border-right{
  border-right: 1px solid #f0f0f0;
  height: 60rpx;
}

.border-top{
  border-top: 1px solid #f0f0f0;
}

.bar{
  min-height: 80rpx;
}

.srh{
  height: 56rpx;
}

.navi{
  width: 100rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.rls-btn{
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 15rpx;
}

.scr-bar{
  position: relative;
}

.screen{
  width: 100%;
  position: absolute;
  top: 80rpx;
  z-index: 10;
  flex-direction: column;
}

.scr-btn{
  /* border-radius: 20%; */
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  margin: 10rpx 20rpx;
}

.pic{
  margin-bottom: 10rpx;
  width: 100%;
  max-height: 220rpx;
  display: flex;
  justify-content: center;
}

.pic image{
  width: 95%;
  max-height: 210rpx;
  display: block;
  border-radius: 10rpx;
}

.cont{
  display: flex;
}

.cont>.img{
  display: flex;
  margin: 0 20rpx; 
  text-align: center;
  justify-content: center;
}

.cont>.img>image{
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
}

.desc{
  flex: 1;
  display: flex;
  padding-bottom: 10rpx;
	flex-direction: column;
  justify-content: space-between;
}

.text-title{
  /* display: flex; */
  min-height: 70rpx;
  font-size: 28rpx;
  color: var(--black);
}

.text-title0{
  /* display: flex; */
  min-height: 48rpx;
  font-size: 30rpx;
  color: var(--black);
}

.text-content{
  font-size: 26rpx;
	color: var(--black);
  overflow: hidden;
}

.tag{
  font-size: 20rpx;
	vertical-align: middle;
	position: relative;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	padding: 0rpx 5rpx;
	height:35rpx;
	font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
  width: min-content;
}

.bottomline{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
  color: var(--gray);
}

.bottomline>image{
  width: 300rpx;
}

.loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}