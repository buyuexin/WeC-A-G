/* pages/index/index.wxss */
.navigator{
  width: 100%;
  height: 100%;
}

.medium{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin: 0 auto;
}

.medium .row{
  display: flex;
  flex: 1;
  flex-direction: row;
  /* background: var(--olive); */
}

.medium .block{
  flex: 1;
  background-color: var(--grey);
  height: 100rpx;
  margin: 15rpx;
  text-align: center;
  line-height: 80rpx;
}


.label{
	display: flex;
	align-items: center;
	height: 100%;
	justify-content: center;
  max-width: 100%;
  font-size: 18px;
}

.hotbar{
  margin-top: 20rpx;
}

.nav-item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav-item>image{
  height: 128rpx;
  width: 128rpx;
}

.nav-item>view{
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  color: var(--white);
}

